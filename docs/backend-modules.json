{
  "version": "1.0",
  "lastUpdated": "2025-11-28",
  "description": "Backend CMS modules and data models for Devmart Marko v1",
  "enums": {
    "ContentStatus": {
      "description": "Standard content status across publishable entities",
      "values": ["draft", "published", "archived"]
    },
    "SubmissionStatus": {
      "description": "Status for user-submitted forms (contact, newsletter, etc.)",
      "values": ["new", "read", "responded", "archived"]
    },
    "BillingPeriod": {
      "description": "Pricing plan billing frequency",
      "values": ["month", "year", "one-time"]
    },
    "AdminRole": {
      "description": "Admin user permission levels",
      "values": ["admin", "editor"]
    }
  },
  "modules": [
    {
      "name": "Services",
      "phase": "v1",
      "tableName": "services",
      "description": "Service offerings displayed on Services page",
      "adminRoute": "/admin/services",
      "fields": [
        {
          "name": "id",
          "type": "uuid",
          "primaryKey": true,
          "generated": true
        },
        {
          "name": "name",
          "type": "string",
          "required": true,
          "maxLength": 100,
          "example": "Custom Web Application Development"
        },
        {
          "name": "slug",
          "type": "string",
          "required": true,
          "unique": true,
          "pattern": "^[a-z0-9-]+$",
          "example": "custom-web-apps"
        },
        {
          "name": "description",
          "type": "text",
          "required": true,
          "maxLength": 500,
          "example": "We build scalable web applications tailored to your business needs..."
        },
        {
          "name": "icon_url",
          "type": "string",
          "nullable": true,
          "example": "/marko-digital-marketing-agency-html/image/Icon-2.png"
        },
        {
          "name": "featured",
          "type": "boolean",
          "default": false,
          "description": "Display on homepage"
        },
        {
          "name": "sort_order",
          "type": "integer",
          "default": 0,
          "description": "Display order (ascending)"
        },
        {
          "name": "status",
          "type": "enum",
          "enum": "ContentStatus",
          "default": "published"
        },
        {
          "name": "created_at",
          "type": "timestamp",
          "generated": true
        },
        {
          "name": "updated_at",
          "type": "timestamp",
          "generated": true
        }
      ]
    },
    {
      "name": "Projects / Case Studies",
      "phase": "v1",
      "tableName": "case_studies",
      "description": "Portfolio projects and case studies",
      "adminRoute": "/admin/projects",
      "fields": [
        {
          "name": "id",
          "type": "uuid",
          "primaryKey": true,
          "generated": true
        },
        {
          "name": "title",
          "type": "string",
          "required": true,
          "maxLength": 150,
          "example": "Government Portal Modernization"
        },
        {
          "name": "slug",
          "type": "string",
          "required": true,
          "unique": true,
          "pattern": "^[a-z0-9-]+$",
          "example": "government-portal-2024"
        },
        {
          "name": "description",
          "type": "text",
          "required": true,
          "maxLength": 1000,
          "example": "Comprehensive modernization of legacy government system..."
        },
        {
          "name": "client_name",
          "type": "string",
          "nullable": true,
          "maxLength": 100,
          "example": "Tech Solutions Inc."
        },
        {
          "name": "tags",
          "type": "array<string>",
          "default": [],
          "example": ["Government", "Portal", "Legacy Modernization"]
        },
        {
          "name": "featured_image",
          "type": "string",
          "nullable": true,
          "example": "/uploads/case-studies/project-hero.jpg"
        },
        {
          "name": "results_summary",
          "type": "text",
          "nullable": true,
          "maxLength": 500,
          "example": "Reduced processing time by 60%, improved citizen satisfaction by 45%"
        },
        {
          "name": "featured",
          "type": "boolean",
          "default": false,
          "description": "Display on homepage"
        },
        {
          "name": "sort_order",
          "type": "integer",
          "default": 0
        },
        {
          "name": "status",
          "type": "enum",
          "enum": "ContentStatus",
          "default": "published"
        },
        {
          "name": "created_at",
          "type": "timestamp",
          "generated": true
        },
        {
          "name": "updated_at",
          "type": "timestamp",
          "generated": true
        }
      ]
    },
    {
      "name": "Pricing Plans",
      "phase": "v1",
      "tableName": "pricing_plans",
      "description": "Service packages and pricing tiers",
      "adminRoute": "/admin/pricing",
      "fields": [
        {
          "name": "id",
          "type": "uuid",
          "primaryKey": true,
          "generated": true
        },
        {
          "name": "name",
          "type": "string",
          "required": true,
          "maxLength": 50,
          "example": "Starter"
        },
        {
          "name": "slug",
          "type": "string",
          "required": true,
          "unique": true,
          "example": "starter"
        },
        {
          "name": "description",
          "type": "string",
          "required": true,
          "maxLength": 200,
          "example": "Perfect for small businesses getting started online"
        },
        {
          "name": "price",
          "type": "decimal",
          "required": true,
          "precision": 10,
          "scale": 2,
          "example": 99.00
        },
        {
          "name": "billing_period",
          "type": "enum",
          "enum": "BillingPeriod",
          "default": "month"
        },
        {
          "name": "features",
          "type": "array<string>",
          "default": [],
          "example": ["5-page website", "Mobile responsive", "Basic SEO", "Contact form"]
        },
        {
          "name": "target_segment",
          "type": "string",
          "nullable": true,
          "maxLength": 100,
          "example": "Small businesses & startups"
        },
        {
          "name": "highlighted",
          "type": "boolean",
          "default": false,
          "description": "Show as recommended plan"
        },
        {
          "name": "sort_order",
          "type": "integer",
          "default": 0
        },
        {
          "name": "status",
          "type": "enum",
          "enum": "ContentStatus",
          "default": "published"
        },
        {
          "name": "created_at",
          "type": "timestamp",
          "generated": true
        },
        {
          "name": "updated_at",
          "type": "timestamp",
          "generated": true
        }
      ]
    },
    {
      "name": "Testimonials",
      "phase": "v1",
      "tableName": "testimonials",
      "description": "Client reviews and testimonials",
      "adminRoute": "/admin/testimonials",
      "fields": [
        {
          "name": "id",
          "type": "uuid",
          "primaryKey": true,
          "generated": true
        },
        {
          "name": "client_name",
          "type": "string",
          "required": true,
          "maxLength": 100,
          "example": "Sarah Johnson"
        },
        {
          "name": "client_company",
          "type": "string",
          "nullable": true,
          "maxLength": 100,
          "example": "Tech Innovations Ltd."
        },
        {
          "name": "client_role",
          "type": "string",
          "nullable": true,
          "maxLength": 100,
